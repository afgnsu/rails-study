<% if @resume.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @resume.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @resume, html: {multipart: true} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :attachment %>
    <%= f.file_field :attachment%>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
